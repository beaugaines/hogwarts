source 'https://rubygems.org'

gem 'rails', '3.2.13'
gem 'sqlite3'

# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :development do
  gem 'quiet_assets'
  gem 'ffaker'
  gem 'rails_best_practices'
  gem 'pry-rails'
end
